<p id="notice"><%= notice %></p>

<div class="bg-primary h-100 min-h-screen">
  <h1 class="text-2xl text-center py-6 text-white">Stocks</h1>

  <div class="flex justify-center w-full">
    <div class="rounded-lg border bg-white shadow m-5 md:w-1/2 w-96">
      <%# Loop to show all the available orders %>
      <% @stocks.each do |stock| %>
      <div class="p-2">
        <div class="p-3 rounded-lg border bg-gray-200 shadow flex flex-row justify-between">
          <div class="flex flex-column">
            <ul>
              <li class="text-lg"><%= stock["name"] %></li>
              <li>Symbol: ( <%= stock["symbol"] %>:ASX )</li>
              <li><%= number_to_currency(stock["price"]) %></li>
            </ul>
          </div>

          <%# Show orders of the stock%>
          <div class="w-10">
            <%= link_to image_tag("show-dot.png"), stock %>
          </div>
        </div>
      </div>
      <% end %>

    </div>
  </div>
</div>