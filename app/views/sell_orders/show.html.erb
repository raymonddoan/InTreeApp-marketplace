<p>
  <strong>Quantity:</strong>
  <%= @sell_order.quantity %>
</p>

<p>
  <strong>Price:</strong>
  <%= @sell_order.price %>
</p>

<p>
  <strong>Expiry date:</strong>
  <%= @sell_order.expiry_date %>
</p>

<p>
  <strong>Stock:</strong>
  <%= @sell_order.stock_id %>
</p>

<p>
  <strong>Seller:</strong>
  <%= @sell_order.seller_id %>
</p>

