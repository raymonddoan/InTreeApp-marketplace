<h1>Sell Orders</h1>

<table>
  <thead>
    <tr>
      <th>Quantity</th>
      <th>Price</th>
      <th>Expiry date</th>
      <th>Stock</th>
      <%# <th>Seller</th> %>
      <%# <th>Buyer</th> %>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sell_orders.each do |sell_order| %>
      <tr>
        <td><%= sell_order.quantity %></td>
        <td><%= sell_order.price %></td>
        <td><%= sell_order.expiry_date %></td>
        <td><%= sell_order.stock_id %></td>
        <td><%# sell_order.seller_id %></td>
        <td><%# sell_order.buyer_id %></td>
        <td><%= link_to 'Show', sell_order %></td>
        <td><%# link_to 'Edit', edit_sell_order_path(sell_order) %></td>
        <td><%# link_to 'Destroy', sell_order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
