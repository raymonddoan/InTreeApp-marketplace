<style>
    .active{
        display: block;
    }    
</style>

<script>
    let hamburger = document.getElementById('hamburgerbtn');

    let mobileMenu1 = document.getElementById('mobileMenu1');

    let mobileMenu2 = document.getElementById('mobileMenu2');


